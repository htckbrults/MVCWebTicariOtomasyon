@using MVCOnlineTicariOtomasyon.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>PRODUCT</th>
        <th>BRAND</th>
        <th>STOCK</th>
        <th>PURCHASEPRICE</th>
        <th>SALEPRICE</th>
        <th>CATEGORY</th>
        <th>PICTURE</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    @foreach (var p in Model)
    {
<tr>
    <td>@p.ProductId</td>
    <td>@p.ProductName</td>
    <td>@p.Brand</td>
    <td>@p.Stock</td>
    <td>@p.PurchasePrice</td>
    <td>@p.SalePrice</td>
    <td>@p.Category.CategoryName</td>
    <td>@p.ProductPicture</td>
    <td>
        <a href="/Product/DeleteProduct/@p.ProductId" class="btn btn-danger">DELETE</a>
    </td>
    <td>
        <a href="/Product/BringProduct/@p.ProductId" class="btn btn-success">UPDATE</a>
    </td>

</tr>

    }
</table>
<a href="/Product/NewProduct/" class="btn btn-info">New Product</a>
