@model MVCOnlineTicariOtomasyon.Models.Classes.Category
@{
    ViewBag.Title = "BringCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Update Category</h2>
<br />
@using(Html.BeginForm("Update Category","Category",FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(x=>x.CategoryName)
                    @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control"})
                    @Html.HiddenFor(x=>x.Id)
                </div>
                <button class="btn btn-warning">Update</button>
            }


